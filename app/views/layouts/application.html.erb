<!DOCTYPE html>
<html>
  <head>
    <title>Taskify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload", "media": "all" %>
    <meta name="turbo-prefetch" content="false">
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100 text-gray-900">
    <nav class="bg-white shadow-md p-4">
      <% flash.each do |key, message| %>
        <div class="alert alert-<%= key %>">
          <%= message %>
        </div>
      <% end %>
      <div class="container mx-auto flex justify-between items-center">
        <div class="flex items-center space-x-4">
          <% if user_signed_in? %>
            <%= link_to 'Home', root_path, class: "bg-blue-500 text-white font-bold bg-gray-200 border border-gray-300 rounded-md px-4 py-2 hover:bg-gray-300 transition duration-300 rounded" %>
          <% end %>
        </div>
        <div class="flex items-center space-x-4">
          <% if user_signed_in? %>
            <%= link_to 'Edit Profile', edit_user_registration_path, class: "bg-blue-500 text-white font-bold bg-gray-200 border border-gray-300 rounded-md px-4 py-2 hover:bg-gray-300 transition duration-300 rounded" %>
            <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "bg-blue-500 text-white font-bold bg-gray-200 border border-gray-300 rounded-md px-4 py-2 hover:bg-gray-300 transition duration-300 rounded" %>
          <% else %>
            <%= link_to 'Sign In', new_user_session_path, class: " bg-blue-500 text-white font-bold bg-gray-200 border border-gray-300 rounded-md px-4 py-2 hover:bg-gray-300 transition duration-300 rounded" %>
            <%= link_to 'Sign Up', new_user_registration_path, class: "bg-blue-500 text-white font-bold bg-gray-200 border border-gray-300 rounded-md px-4 py-2 hover:bg-gray-300 transition duration-300 rounded" %>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container mx-auto mt-8">
      <%= yield %>
    </div>
  </body>
</html>
