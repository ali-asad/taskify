<h1>Edit Comment</h1>

<%= form_with(model: [@task, @comment], local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :body, class: 'block text-gray-700' %>
    <%= form.text_area :body, class: "w-full mt-1 p-2 border border-gray-300 rounded-md", placeholder: "Edit your comment..." %>
  </div>
  <%= form.submit 'Update Comment', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>

<%= link_to 'Back to Task', task_path(@task), class: "text-blue-500 hover:underline mt-4 block" %>
