<%= form_with(model: [@task, @comment], local: true, html: { multipart: true }) do |form| %>
  <div class="mb-4">
    <%= form.label :body, class: 'block text-gray-700' %>
    <%= form.text_area :body, class: "w-full mt-1 p-2 border border-gray-300 rounded-md", placeholder: "Write a comment..." %>
  </div>

  <div class="mb-4">
    <%= form.label :image, class: "block text-gray-700 text-sm font-bold mb-2"  %>
    <%= form.file_field :image, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  
  <%= form.submit 'Add Comment', class: "bg-gray-400 hover:bg-gray-300 text-white font-bold py-2 px-4 rounded" %>
<% end %>
